import feedparser
import feedsearch
from datetime import datetime
from datetime import datetime, timedelta

def fetch_rss_link(links) -> list[str]:
    """Locate the RSS or ATOM feed based on base url"""
    urls: list[str] = []
    for link in links:
        feed: str = feedsearch.search(url=link)      
        urls.append(feed)
        print(urls)

def fetch_rss_data(urls) -> list[str]:
    """Collect recent articles found on RSS or ATOM link"""
    # Get current year and current month
    current_year: int = datetime.now().year
    current_month: int = datetime.now().month

    # Encode list of Feed/ATOM URLs
    urls_str: str = ','.join(urls)
    new_urls_str = urls_str.encode(encoding ='UTF-8')

    # Locate the article details by current month and current year
    feed = feedparser.parse(url_file_stream_or_string=new_urls_str)
    print("Feed Title:", feed.feed.title)
    for entry in feed.entries:
        date: datetime = entry.published_parsed
        if date.tm_year == current_year and date.tm_mon == current_month:
            print("Entry Title:", entry.title)
            print("Entry Author:", entry.author)
            print("Entry Link:", entry.link)
            print("Entry Published Date:", entry.published)
            print("Entry Summary:", entry.summary)
            print("\n")

def main() -> None:
    config = Config(target_file='config.toml')
    links = config.rsslist
    fetch_rss_link(links)

if __name__ == "__main__":
    main()
